                                </div>
                                <div class="form-group">
                                    <label for="Email">Email:</label>
                                    <input type="email" class="form-control" id="Email" maxlength="35">
                                </div>
                                <div class="form-group">
                                    <label for="PhoneNumber">Phone Number</label>
                                    <input type="text" class="form-control" id="PhoneNumber" maxlength="14"  required="required">
                                </div>
                                <div class="form-group">
                                    <label for="fileUpload">File Upload</label>
                                    <input type="file" id="fileUpload" maxlength="14">
                                </div>
                                <div class="form-group">

                                    <input type="submit" id="submit" class="btn btn-default">
                                </div>
                            </form>
                        
                        </div><!--end modal-body-->
                    </div><!--end modal-content-->
                </div><!--end modal dialog-->
